extends layout

block content
  h1 Books

  div.o-flex-group
    a(href="/books/new").o-btn.o-btn-primary Create new book
    form(action="/books", method="post")
      div.o-input-group
        input(type="text" id="search" name="search" placeholder="Search books").o-form-control
        button(type="submit" value="search").o-btn <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M500.3 443.7l-119.7-119.7c27.22-40.41 40.65-90.9 33.46-144.7C401.8 87.79 326.8 13.32 235.2 1.723C99.01-15.51-15.51 99.01 1.724 235.2c11.6 91.64 86.08 166.7 177.6 178.9c53.8 7.189 104.3-6.236 144.7-33.46l119.7 119.7c15.62 15.62 40.95 15.62 56.57 0C515.9 484.7 515.9 459.3 500.3 443.7zM79.1 208c0-70.58 57.42-128 128-128s128 57.42 128 128c0 70.58-57.42 128-128 128S79.1 278.6 79.1 208z"/></svg>

  table.o-table
    thead 
      tr 
        th Title
        th Author 
        th Genre 
        th Year

    tbody 
    for book in books 
      tr
        td 
          a(href=`/books/${book.id}`) #{book.title}
        td #{book.author}
        td #{book.genre}
        td #{book.year}