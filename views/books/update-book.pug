extends ../layout

block content
  h1= title
  if(errors)
    h2.error Ooops looks like somethings missing! 
    ul.error    
        each error in errors 
            li= error.message 
  form(action="/books/" + book.id, method="post")
    div.o-form-group
      label(for="title") Title:
      input(type="text" id="title" name="title" value=book.title).o-form-control
    div.o-form-group
      label(for="author") Author:
      input(type="text" id="author" name="author" value=book.author).o-form-control
    div.o-form-group
      label(for="genre") Genre:
      input(type="text" id="genre" name="genre" value=book.genre).o-form-control
    div.o-form-group
      label(for="year") Year:
      input(type="text" id="year" name="year" value=book.year).o-form-control
    div.o-btn-container
      a(href="/books") Cancel
      button(type="submit").o-btn.o-btn-primary Update book
    <div class="book-delete">
      a(href="/books/" + book.id + "/delete").o-btn.o-btn-danger Delete book
    </div>
